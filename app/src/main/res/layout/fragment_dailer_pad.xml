<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/transparent"
             app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
             tools:context=".Fragments.DailerPad">

    <androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dark"
        >

            <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:id="@+id/my_app_bar"
                    android:layout_height="50dp"
                    android:background="@color/variantdark"
            >

                <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/baseline_arrow_back_24"
                        android:background="@color/variantdark"
                />


            </com.google.android.material.appbar.AppBarLayout>
            <androidx.core.widget.NestedScrollView
                    android:id="@+id/search_results"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_anchor="@id/my_app_bar"
                    android:layout_below="@id/my_app_bar"
            >


            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>
        <LinearLayout
                android:id="@+id/dialer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="100dp"
                android:orientation="vertical"
                android:background="@color/variantdark"
                android:padding="1dp"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:visibility="visible"
                >

            <!-- Display the user input -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <EditText
                        android:id="@+id/user_input_display"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textColor="@android:color/white"
                        android:background="@null"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:drawablePadding="8dp"
                        android:inputType="none"
                        android:text=""/>
                <ImageButton
                        android:id="@+id/delete_button"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/clear"
                        android:background="@color/variantdark"

                />
            </LinearLayout>

            <!-- Row 1 -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                <Button
                        android:id="@+id/one_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1"
                        android:layout_margin="5dp"
                        android:textSize="30sp"
                        android:textColor="@color/variantwhite"/>

                <Button
                        android:id="@+id/two_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2"
                        android:layout_margin="5dp"
                        android:textSize="30sp"
                        android:textColor="@color/variantwhite"/>

                <Button
                        android:id="@+id/three_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="3"
                        android:layout_margin="5dp"
                        android:textSize="30sp"
                        android:textColor="@color/variantwhite"/>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                <Button
                        android:id="@+id/four_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="4"
                        android:layout_margin="5dp"
                        android:textSize="30sp"
                        android:textColor="@color/variantwhite"/>

                <Button
                        android:id="@+id/five_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="5"
                        android:layout_margin="5dp"
                        android:textSize="30sp"
                        android:textColor="@color/variantwhite"/>

                <Button
                        android:id="@+id/six_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="6"
                        android:layout_margin="5dp"
                        android:textSize="30sp"
                        android:textColor="@color/variantwhite"/>
            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                <Button
                        android:id="@+id/seven_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="7"
                        android:layout_margin="5dp"
                        android:textSize="30sp"
                        android:textColor="@color/variantwhite"/>

                <Button
                        android:id="@+id/eight_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="8"
                        android:layout_margin="5dp"
                        android:textSize="30sp"
                        android:textColor="@color/variantwhite"/>

                <Button
                        android:id="@+id/nine_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="9"
                        android:layout_margin="5dp"
                        android:textSize="30sp"
                        android:textColor="@color/variantwhite"/>
            </LinearLayout>

            <!-- Row 4 -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                <Button
                        android:id="@+id/star_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="*"
                        android:layout_margin="5dp"
                        android:textSize="30sp"
                        android:textColor="@color/variantwhite"/>

                <Button
                        android:id="@+id/zero_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        android:layout_margin="5dp"
                        android:textSize="30sp"
                        android:textColor="@color/variantwhite"/>

                <Button
                        android:id="@+id/hash_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="#"
                        android:layout_margin="5dp"
                        android:textSize="30sp"
                        android:textColor="@color/variantwhite"/>
            </LinearLayout>

            <!-- Delete Button -->
            <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/answer_call"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:id="@+id/intiate_call"
                    android:background="@drawable/button_bg_green_round"
            />
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>



</FrameLayout>